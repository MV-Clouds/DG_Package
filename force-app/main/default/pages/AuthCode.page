<apex:page showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" standardController="Account" extensions="AuthCodeController">
    <html>
        <head>
            <style>
                .blinking {
                animation: blink-animation 0.5s linear;
                }
              
                @keyframes blink-animation {
                    0%{
                        background: #E9EFFA;
                    }
                    50% {
                        background: #c2d9ff;
                    }
                    100%{
                        background: #E9EFFA;
                    }
                }

                body{
                  display: flex;
                  font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                  align-items: center;
                  justify-content: center;
                  height: calc(100vh - 40px);
                  background: #f0f4f9;
                  width: 100%;
                }
                .container {
                  /* Styling for the container element */
                  width: 800px;
                  margin: 0 auto;
                  padding: 20px;
                  border: 1px solid white;
                  border-radius: 10px;
                  background-color: white;
                }
                .title {
                  /* Styling for the title element */
                  font-size: 1.2em;
                  font-weight: bold;
                  margin-bottom: 20px;
                }
                .code {
                  /* Styling for the authorization code element */
                  font-family: monospace;
                  background-color: #E9EFFA;
                  padding: 10px;
                  border-radius: 5px;
                  font-size: 14px;
                }
                .instructions {
                  /* Styling for the instructions element */
                  margin-block: 20px;
                }
                .codeblock{
                  display: flex;
                  width: 100%;
                  margin-bottom: 20px;
                  transition: all linear 0.19s;
                }
                .codeblock .code{
                  box-sizing: border-box;
                  width: 80%;
                  font-size: 14px;
                  padding-right: 10px;
                  margin-right: 20px;
                  overflow: hidden;
                  margin-block: 0px;
                }

                .codeblock button{
                  height: 40px;
                  border: 0px solid white;
                  border-radius: 30px;
                  color: White;
                  /* background: #dfeaf8; */
                  background: #0b57d0;
                  padding-inline: 15px;
                  width: 100px;
                }

                button:hover{
                  background-color: 0px 0px 8px 0px #878787
                }

                button{
                  cursor: pointer;
                  height: 40px;
                  border: 0px solid white;
                  border-radius: 30px;
                  color: #0b57d0;
                  background: #dfeaf8;
                  padding-inline: 15px;
                }
              </style>
              <script type="text/javascript">
                function copyCode() {
                    var code = document.getElementById('authorizationCode');
                    var btn = document.getElementById('copybtn');
                    navigator.clipboard.writeText(code.textContent).then(function() {
                        code.classList.add('blinking');
                        btn.innerText= 'Copied !';

                    }, function(err) {
                        alert('Failed to copy code: ' + err);
                    });
                }

                document.addEventListener('animationend', function(event) {
                if (event.target.classList.contains('blinking')) {
                        event.target.classList.remove('blinking');
                        var btn = document.getElementById('copybtn');
                        btn.innerText = 'Copy Code';


                    }
                });

                function closeWindow() {
                    window.close(); // Closes the current tab
                }
            </script>
              </head>
              <body>
              <div class="container">
                <h2 class="title">Integrate with DocGenius</h2>
                <p class="instructions">
                    Paste this authorization code on the DocGenius app's connect GoogleDrive screen.
                </p>
                <!-- <p>
                    <a href="javascript:void(0);" onclick="copyCode()">Copy the authorization code</a>
                </p> -->
                <div class="codeblock">
                  <p class="code" id="authorizationCode">{!code}</p>
                  <button id="copybtn" onclick="copyCode()">Copy Code</button>
                </div>
                
                <button onclick="closeWindow()">Close this window</button>
            </div>
          </body>
    </html>
</apex:page>