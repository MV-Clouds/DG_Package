<apex:page showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" controller="DropboxSuccessController">
    <html>
        <head>
            <style>
                body {
                    font-family: Bahnschrift, 'Segoe UI', 'Segoe UI Web (West European)', -apple-system, BlinkMacSystemFont, Roboto, 'Helvetica Neue', sans-serif;
                    background-color: #f5f5f5;
                    text-align: center;
                    padding: 50px;
                }

                .container {
                    max-width: 600px;
                    margin: 0 auto;
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 10px;
                    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                }

                h1 {
                    color: #333;
                }

                p {
                    background: #4CAF50;
                    color: white;
                    padding: 20px;
                    border-radius: 5px;
                    font-size: 18px;
                }

                .fail {
                    background: #f16d6d;
                    color: white;
                    padding: 20px;
                    border-radius: 5px;
                    font-size: 18px;
                }

                h2 {
                    margin-top: 20px;
                    color: #333;
                }
                span {
                    color: #0061fe
                }

                .back:hover {
                    cursor: pointer
                }
            </style>
        </head>
        <body>
            <apex:outputPanel styleClass="successPanels" style="display: none;">
                <div class="container">
                    <h1>Integration Successful</h1>
                    <p>Thank You For Choosing Our Services. Your Integration Is Successful.</p>
                </div>
                <h2>Please Wait You're Getting Redirected To The Previous Page</h2>
            </apex:outputPanel>
            <apex:outputPanel styleClass="errorPanels" style="display: none;">
                <div class="container">
                    <h1>Integration Failed</h1>
                    <p class="fail">Something Went Wrong Make Sure All Permissions Are Given</p>
                </div>
                <h2>Please <span onclick="closeWindow()" class="back">Go Back</span> To The Previous Page</h2>
            </apex:outputPanel>
            <script>
                function closeWindow() {
                    redirectToSalesforce();
                }

                function init() {
                    console.log('currentUrl:', '{!$CurrentPage.URL}');
                    var currentUrl = '{!$CurrentPage.URL}';
                    console.log('currentUrl');

                    Visualforce.remoting.Manager.invokeAction(
                        '{!$RemoteAction.DropboxSuccessController.gettoken}',
                        '{!$CurrentPage.URL}',
                        function(result, event) {
                            if(result == 'Success'){
                                if (event.status) {
                                    console.log('this is eventstatus');
                                    var successPanels = document.getElementsByClassName('successPanels')[0];
                                    console.log(successPanels);
                                    if (successPanels) {
                                        successPanels.style.display = 'block';
                                        console.log('successPanels');
                                        redirectToSalesforce();

                                    }
                                    console.log(event.status);
                                } else {
                                    var errorPanels = document.getElementsByClassName('errorPanels')[0];
                                    if (errorPanels) {
                                        errorPanels.style.display = 'block';
                                        console.log('errorpanels');
                                    }
                                    console.error(event.message);
                                }
                            }
                            else{
                                var errorPanels = document.getElementsByClassName('errorPanels')[0];
                                    if (errorPanels) {
                                        errorPanels.style.display = 'block';
                                        console.log('errorpanels');
                                    }
                                    console.error(event.message);
                            }
                        }
                    );
                }

                function redirectToSalesforce() {
                            Visualforce.remoting.Manager.invokeAction(
                                '{!$RemoteAction.DropboxSuccessController.redirectToSalesforcePage}',
                                function(result, event) {
                                    if (event.status) {
                                        window.location.href = result;
                                    } else if (event.type === 'exception') {
                                        console.error(event.message);
                                    } else {
                                        console.error('Unknown error occurred');
                                    }
                                }
                            );

                    }
                    document.addEventListener('DOMContentLoaded', init);
            </script>
        </body>
    </html>
</apex:page>